<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:vm="clr-namespace:TableConverter.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TableConverter.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid>
    <SplitView Name="MainSplitView"
               IsPaneOpen="True" 
               PanePlacement="Left"
               DisplayMode="Inline"
               Background="{DynamicResource BackgroundBrush}">
      <!-- Split View Left Side -->
      <SplitView.Pane>
        <Border Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0 0 1 0">
          <ScrollViewer>
            <StackPanel Orientation="Vertical"
                        Spacing="30"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="30 30 30 30">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <!-- About Section Title -->
                <TextBlock Grid.Column="0"
                            Text="{Binding AboutTitle}"
                            FontSize="20"
                            FontFamily="{StaticResource JetBrainsMono}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            TextWrapping="Wrap"
                            LineSpacing="4">
                </TextBlock>
                <!-- About Section Close Button -->
                <Button Grid.Column="1"
                        Margin="20 0 0 0"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Button.Click="CloseAboutSplitViewButtonClicked">
                  <PathIcon Data="{StaticResource LeftArrow}"
                            Height="24"
                            Width="24">
                  </PathIcon>
                </Button>
              </Grid>
              <!-- About Section Text -->
              <TextBlock Text="{Binding AboutText}"
                          FontFamily="{StaticResource JetBrainsMono}"
                          TextWrapping="Wrap"
                          TextAlignment="Left"
                          LineSpacing="4">
              </TextBlock>
              <!-- About Section Input Converter Description -->
              <Border BorderBrush="{DynamicResource BorderBrush}"
                      BorderThickness="1"
                      CornerRadius="10 10 10 10">
                <Grid Margin="10 10 10 10">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>  
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                  </Grid.RowDefinitions>
                  <!-- Input Converter Description Title -->
                  <TextBlock Grid.Column="0"
                              Grid.Row="0"
                              Text="{Binding SelectedInputConverter.name}"
                              FontSize="18"
                              FontFamily="{StaticResource JetBrainsMono}"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left">
                  </TextBlock>
                  <!-- Input Converter Description Extension -->
                  <Border Grid.Column="1"
                          Grid.Row="0"
                          Background="Black"
                          Opacity="0.2"
                          CornerRadius="5"
                          Margin="10 0 0 0">
                    <TextBlock Padding="5 5 5 5"
                                Opacity="90"
                                Text="{Binding SelectedInputConverter.extensions[0]}"
                                FontFamily="{StaticResource JetBrainsMono}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">
                    </TextBlock>
                  </Border>
                  <!-- Input Converter Description -->
                  <TextBlock Grid.ColumnSpan="2"
                              Grid.Row="1"
                              Margin="0 10 0 0"
                              Text="{Binding SelectedInputConverter.description}"
                              FontFamily="{StaticResource JetBrainsMono}"
                              TextWrapping="Wrap"
                              LineSpacing="4">
                  </TextBlock>
                </Grid>
              </Border>
              <!-- About Section Output Converter Description -->
              <Border BorderBrush="{DynamicResource BorderBrush}"
                      BorderThickness="1"
                      CornerRadius="10 10 10 10">
                <Grid Margin="10 10 10 10">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>  
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                  </Grid.RowDefinitions>
                  <!-- Output Converter Description Title -->
                  <TextBlock Grid.Column="0"
                              Grid.Row="0"
                              Text="{Binding SelectedOutputConverter.name}"
                              FontSize="18"
                              FontFamily="{StaticResource JetBrainsMono}"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left">
                  </TextBlock>
                  <!-- Output Converter Description Extension -->
                  <Border Grid.Column="1"
                          Grid.Row="0"
                          Background="Black"
                          Opacity="0.2"
                          CornerRadius="5"
                          Margin="10 0 0 0">
                    <TextBlock Padding="5 5 5 5"
                                Opacity="90"
                                Text="{Binding SelectedOutputConverter.extensions[0]}"
                                FontFamily="{StaticResource JetBrainsMono}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">
                    </TextBlock>
                  </Border>
                  <!-- Output Converter Description -->
                  <TextBlock Grid.ColumnSpan="2"
                              Grid.Row="1"
                              Margin="0 10 0 0"
                              Text="{Binding SelectedOutputConverter.description}"
                              FontFamily="{StaticResource JetBrainsMono}"
                              TextWrapping="Wrap"
                              LineSpacing="4">
                  </TextBlock>
                </Grid>
              </Border>
              <!-- About Section How to Convert Text -->
              <Border BorderBrush="{DynamicResource BorderBrush}"
                      BorderThickness="1"
                      CornerRadius="10 10 10 10">
                <StackPanel Orientation="Vertical"
                            Margin="15 15 15 15"
                            Spacing="15">
                  <!-- How to Convert Title -->
                  <TextBlock Text="How to Convert?"
                              FontSize="18"
                              FontFamily="{StaticResource JetBrainsMono}"
                              VerticalAlignment="Center">
                  </TextBlock>
                  <!-- How to Convert List -->
                  <ItemsControl ItemsSource="{Binding AboutHowToConvertText}">
                    <ItemsControl.ItemsPanel>
                      <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"
                                    Spacing="15">
                        </StackPanel>
                      </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                      <DataTemplate>
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                          </Grid.ColumnDefinitions>
                          <!-- How to Convert Index -->
                          <StackPanel Grid.Column="0"
                                      Orientation="Horizontal"
                                      VerticalAlignment="Center"
                                      Margin="0 0 15 0">
                            <TextBlock Text="{Binding index}"
                                        FontSize="24"
                                        FontWeight="ExtraBold"
                                        Foreground="CornflowerBlue"
                                        FontFamily="{StaticResource JetBrainsMono}"
                                        VerticalAlignment="Center">
                            </TextBlock>
                            <TextBlock Text="."
                                        FontSize="24"
                                        FontWeight="ExtraBold"
                                        Foreground="CornflowerBlue"
                                        FontFamily="{StaticResource JetBrainsMono}"
                                        VerticalAlignment="Center">
                            </TextBlock>
                          </StackPanel>
                          <!-- How to Convert Text -->
                          <TextBlock Grid.Column="1"
                                      Text="{Binding value}"
                                      FontFamily="{StaticResource JetBrainsMono}"
                                      TextWrapping="Wrap"
                                      LineSpacing="4"
                                      VerticalAlignment="Center">
                          </TextBlock>
                        </Grid>
                      </DataTemplate>
                    </ItemsControl.ItemTemplate>
                  </ItemsControl>
                </StackPanel>
              </Border>
            </StackPanel>
          </ScrollViewer>
        </Border>
      </SplitView.Pane>
      <!-- Right Side Main Content -->
      <SplitView.Content>
        <DockPanel>
          <!-- Header of main content section -->
          <Border DockPanel.Dock="Top" 
                  Margin="40 0 40 30"  
                  Background="{DynamicResource BackgroundBrush}" 
                  BorderBrush="{DynamicResource BorderBrush}"
                  BorderThickness="1 0 1 1"
                  CornerRadius="0 0 10 10">
            <Grid Margin="10 10 10 10">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <!-- Header Section Title -->
              <TextBlock Grid.Column="0"
                         Text="TableConverter"
                         FontSize="20"
                         FontFamily="{StaticResource JetBrainsMono}"
                         VerticalAlignment="Center">
              </TextBlock>
              <StackPanel Grid.Column="2"
                          Orientation="Horizontal"
                          Spacing="10">
                <!-- Header Section Menu Button -->
                <Button>
                  <PathIcon Data="{StaticResource MenuIcon}"
                            Height="24"
                            Width="24"
                            Foreground="{DynamicResource BorderBrush}">
                  </PathIcon>
                  <Button.Flyout>
                    <!-- Header Section Menu Button Flyout -->
                    <Flyout ShowMode="TransientWithDismissOnPointerMoveAway"
                            Placement="BottomEdgeAlignedRight">
                      <StackPanel Spacing="10" 
                                  Width="300">
                        <!-- Header Section Menu Converter Search -->
                        <StackPanel Orientation="Vertical">
                          <Label Content="Conversion Types...🔍"
                                 FontFamily="{StaticResource JetBrainsMono}">
                          </Label>
                          <Grid>
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="*" />
                              <ColumnDefinition Width="Auto" />
                              <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <AutoCompleteBox Grid.Column="0"
                                             Margin="2 2 2 2"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Stretch"
                                             Watermark="Input..."
                                             FilterMode="Contains"
                                             ItemsSource="{Binding InputConverterSearchItems}"
                                             FontFamily="{StaticResource JetBrainsMono}">
                            </AutoCompleteBox>
                            <Label Grid.Column="1"
                                   Content=" to "
                                   VerticalAlignment="Center"
                                   FontFamily="{StaticResource JetBrainsMono}">
                            </Label>
                            <AutoCompleteBox Grid.Column="2" 
                                             Margin="2 2 2 2"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Stretch"
                                             Watermark="Output..."
                                             FilterMode="Contains"
                                             ItemsSource="{Binding OutputConverterSearchItems}"
                                             FontFamily="{StaticResource JetBrainsMono}">
                            </AutoCompleteBox>
                          </Grid>
                        </StackPanel>
                        <Separator Background="{DynamicResource BorderBrush}" />
                        <!-- Header Section Menu Information Button -->
                        <Button HorizontalAlignment="Stretch"
                                Button.Click="HeaderMenuAboutButtonClicked">
                          <StackPanel Orientation="Horizontal"
                                      Spacing="10">
                            <PathIcon Data="{StaticResource InformationIcon}" 
                                      Height="24"
                                      Width="24">
                            </PathIcon>
                            <TextBlock Text="About"
                                       FontFamily="{StaticResource JetBrainsMono}"
                                       VerticalAlignment="Center">
                            </TextBlock>
                          </StackPanel>
                        </Button>
                        <Separator Background="{DynamicResource BorderBrush}" />
                        <!-- Header Section Menu Light/Dark Button -->
                        <Button HorizontalAlignment="Stretch"
                                Button.Click="HeaderMenuLightDarkModeButtonClicked">
                          <StackPanel Orientation="Horizontal"
                                      Spacing="10">
                            <PathIcon Data="{StaticResource LightDarkIcon}"
                                      Height="24"
                                      Width="24">
                            </PathIcon>
                            <TextBlock Text="Light/Dark Mode"
                                       FontFamily="{StaticResource JetBrainsMono}"
                                       VerticalAlignment="Center">
                            </TextBlock>
                          </StackPanel>
                        </Button>
                      </StackPanel>
                    </Flyout>
                  </Button.Flyout>
                </Button>
              </StackPanel>
            </Grid>
          </Border>
          <ScrollViewer Name="MainContentScrollViewer">
            <!-- Input Data Section -->
            <StackPanel Orientation="Vertical" 
                        Spacing="30">
              <Border Background="{DynamicResource BackgroundBrush}" 
                      Margin="40 0 40 0"
                      CornerRadius="10 10 10 10"
                      BorderBrush="{DynamicResource BorderBrush}"
                      BorderThickness="1 1 1 1">
                <Grid Margin="10 10 10 10">
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                  </Grid.RowDefinitions>
                  <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto" />
                      <ColumnDefinition Width="*" />
                      <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- Input Data Section Title -->
                    <TextBlock Grid.Column="0" 
                               Text="Input" 
                               FontSize="16"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left" 
                               Margin="0 0 10 0" 
                               FontWeight="ExtraBold" 
                               FontFamily="{StaticResource JetBrainsMono}" />
                    <!-- Input Data Section Section Buttons -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                Spacing="10">
                      <Button>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="10">
                          <PathIcon Data="{StaticResource TableIcon}"
                                    Height="20"
                                    Width="20">
                          </PathIcon>
                          <TextBlock Text="Example"
                                     FontFamily="{StaticResource JetBrainsMono}"
                                     VerticalAlignment="Center">
                          </TextBlock>
                        </StackPanel>
                      </Button>
                      <Button Button.Click="OpenFileButtonClicked">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="10">
                          <PathIcon Data="{StaticResource FolderOpenIcon}"
                                    Height="20"
                                    Width="20">
                          </PathIcon>
                          <TextBlock Text="Open"
                                     FontFamily="{StaticResource JetBrainsMono}"
                                     VerticalAlignment="Center">
                          </TextBlock>
                        </StackPanel>
                      </Button>
                      <Button Button.Click="PasteFileButtonClicked">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="10">
                          <PathIcon Data="{StaticResource PasteIcon}"
                                    Height="20"
                                    Width="20">
                          </PathIcon>
                          <TextBlock Text="Paste"
                                     FontFamily="{StaticResource JetBrainsMono}"
                                     VerticalAlignment="Center">
                          </TextBlock>
                        </StackPanel>
                      </Button>
                    </StackPanel>
                  </Grid>
                  <!-- Input Data Section Converter List -->
                  <ListBox Grid.Row="1"
                           ItemsSource="{Binding InputConverters}"
                           ScrollViewer.HorizontalScrollBarVisibility="Auto"
                           Margin="0 10 0 10"
                           BorderBrush="Gray"
                           BorderThickness="1"
                           SelectionMode="AlwaysSelected,Single"
                           SelectedItem="{Binding SelectedInputConverter}">
                    <ListBox.ItemsPanel>
                      <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                      </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                      <DataTemplate>
                        <TextBlock Text="{Binding name}"
                                   Margin="5 5 5 5" 
                                   FontFamily="{StaticResource JetBrainsMono}" />
                      </DataTemplate>
                    </ListBox.ItemTemplate>
                  </ListBox>
                  <!-- Input Data Section TextBox -->
                  <Grid Grid.Row="2">
                    <TextBox Watermark="{Binding InputTextBoxWatermarkText}" 
                             TextWrapping="NoWrap" 
                             Text="{Binding InputTextBoxText}"
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Stretch"
                             FontFamily="{StaticResource JetBrainsMono}"
                             BorderBrush="Gray"
                             Height="300"
                             MinHeight="100"
                             BorderThickness="1"
                             AcceptsReturn="True">
                    </TextBox>
                    <PathIcon Data="{StaticResource ResizeYIcon}"
                              Opacity="50"
                              Height="18"
                              Width="18"
                              VerticalAlignment="Bottom"
                              HorizontalAlignment="Right"
                              Margin="0 0 10 10"
                              PointerPressed="ResizableControlIconPointerPressed"
                              PointerMoved="ResizableControlIconPointerMoved"
                              PointerReleased="ResizableControlIconPointerReleased"
                              Cursor="SizeNorthSouth">
                      <PathIcon.RenderTransform>
                        <RotateTransform Angle="90" />
                      </PathIcon.RenderTransform>
                    </PathIcon>
                  </Grid>
                </Grid>
              </Border>
              <!-- Edit Data Section -->
              <Border Background="{DynamicResource BackgroundBrush}"
                      Margin="40 0 40 0"
                      CornerRadius="10 10 10 10"
                      BorderBrush="{DynamicResource BorderBrush}"
                      BorderThickness="1 1 1 1">
                <Grid Margin="10 10 10 10">
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                  </Grid.RowDefinitions>
                  <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto" />
                      <ColumnDefinition Width="*" />
                      <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- Edit Data Section Title -->
                    <TextBlock Grid.Column="0"
                               Text="Edit Data"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="0 0 10 0"
                               FontWeight="ExtraBold"
                               FontFamily="{StaticResource JetBrainsMono}" />
                    <!-- Edit Data Section Buttons -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                Spacing="10">
                    </StackPanel>
                  </Grid>
                  <!-- Edit Data DataGrid -->
                  <Grid Grid.Row="1">
                    <DataGrid Margin="0 10 0 0"
                              Height="300"
                              MinHeight="100"
                              AutoGenerateColumns="False"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              FontFamily="{StaticResource JetBrainsMono}"
                              BorderBrush="Gray"
                              BorderThickness="1"
                              SelectionMode="Single"
                              GridLinesVisibility="All">
                    </DataGrid>
                    <PathIcon Data="{StaticResource ResizeYIcon}"
                              Opacity="50"
                              Height="18"
                              Width="18"
                              VerticalAlignment="Bottom"
                              HorizontalAlignment="Right"
                              Margin="0 0 10 10"
                              PointerPressed="ResizableControlIconPointerPressed"
                              PointerMoved="ResizableControlIconPointerMoved"
                              PointerReleased="ResizableControlIconPointerReleased"
                              Cursor="SizeNorthSouth">
                      <PathIcon.RenderTransform>
                        <RotateTransform Angle="90" />
                      </PathIcon.RenderTransform>
                    </PathIcon>
                  </Grid>
                </Grid>
              </Border>
              <!-- Output Data Section -->
              <Border Background="{DynamicResource BackgroundBrush}"
                      Margin="40 0 40 30"
                      CornerRadius="10 10 10 10"
                      BorderBrush="{DynamicResource BorderBrush}"
                      BorderThickness="1 1 1 1">
                <Grid Margin="10 10 10 10">
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                  </Grid.RowDefinitions>
                  <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto" />
                      <ColumnDefinition Width="*" />
                      <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- Output Data Section Title -->
                    <TextBlock Grid.Column="0"
                               Text="Output"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="0 0 10 0"
                               FontWeight="ExtraBold"
                               FontFamily="{StaticResource JetBrainsMono}" />
                    <!-- Output Data Section Buttons -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                Spacing="10">
                      <Button>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="10">
                          <PathIcon Data="{StaticResource ClearIcon}"
                                    Height="20"
                                    Width="20">
                          </PathIcon>
                          <TextBlock Text="Clear"
                                     FontFamily="{StaticResource JetBrainsMono}"
                                     VerticalAlignment="Center">
                          </TextBlock>
                        </StackPanel>
                      </Button>
                      <Button>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="10">
                          <PathIcon Data="{StaticResource CopyIcon}"
                                    Height="20"
                                    Width="20">
                          </PathIcon>
                          <TextBlock Text="Copy"
                                     FontFamily="{StaticResource JetBrainsMono}"
                                     VerticalAlignment="Center">
                          </TextBlock>
                        </StackPanel>
                      </Button>
                      <Button>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="10">
                          <PathIcon Data="{StaticResource SaveIcon}"
                                    Height="20"
                                    Width="20">
                          </PathIcon>
                          <TextBlock Text="Save"
                                     FontFamily="{StaticResource JetBrainsMono}"
                                     VerticalAlignment="Center">
                          </TextBlock>
                        </StackPanel>
                      </Button>
                    </StackPanel>
                  </Grid>
                  <!-- Output Data Section Converters List -->
                  <ListBox Grid.Row="1"
                           ItemsSource="{Binding OutputConverters}"
                           ScrollViewer.HorizontalScrollBarVisibility="Auto"
                           Margin="0 10 0 10"
                           BorderBrush="Gray"
                           BorderThickness="1"
                           SelectionMode="AlwaysSelected,Single"
                           SelectedItem="{Binding SelectedOutputConverter}">
                    <ListBox.ItemsPanel>
                      <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                      </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                      <DataTemplate>
                        <TextBlock Text="{Binding name}"
                                   Margin="5 5 5 5"
                                   FontFamily="{StaticResource JetBrainsMono}" />
                      </DataTemplate>
                    </ListBox.ItemTemplate>
                  </ListBox>
                  <!-- Output Data Section TextBox -->
                  <Grid Grid.Row="2">
                    <TextBox Watermark="{Binding OutputTextBoxWatermarkText}"
                             Text="{Binding OutputTextBoxText}"
                             TextWrapping="Wrap"
                             Height="300"
                             MinHeight="100"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             FontFamily="{StaticResource JetBrainsMono}"
                             BorderBrush="Gray"
                             BorderThickness="1"
                             IsReadOnly="True"
                             Focusable="False">
                    </TextBox>
                    <PathIcon Data="{StaticResource ResizeYIcon}"
                              Opacity="50"
                              Height="18"
                              Width="18"
                              VerticalAlignment="Bottom"
                              HorizontalAlignment="Right"
                              Margin="0 0 10 10"
                              PointerPressed="ResizableControlIconPointerPressed"
                              PointerMoved="ResizableControlIconPointerMoved"
                              PointerReleased="ResizableControlIconPointerReleased"
                              Cursor="SizeNorthSouth">
                      <PathIcon.RenderTransform>
                        <RotateTransform Angle="90" />
                      </PathIcon.RenderTransform>
                    </PathIcon>
                  </Grid>
                  <Grid Grid.Row="3"
                        Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="*" />
                      <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- Output Data Section Convert Progress -->
                    <ProgressBar Grid.Column="0"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 Minimum="0"
                                 Maximum="100"
                                 Height="16"
                                 ShowProgressText="True"
                                 Margin="0 0 10 0"
                                 FontFamily="{StaticResource JetBrainsMono}"
                                 Foreground="{DynamicResource BorderBrush}">
                    </ProgressBar>
                    <!-- Output Data Section Convert Button -->
                    <Button Grid.Column="1">
                      <StackPanel Orientation="Horizontal"
                                  Spacing="10">
                        <PathIcon Data="{StaticResource ConvertIcon}"
                                  Height="20"
                                  Width="20">
                        </PathIcon>
                        <TextBlock Text="Convert"
                                   FontFamily="{StaticResource JetBrainsMono}"
                                   VerticalAlignment="Center">
                        </TextBlock>
                      </StackPanel>
                    </Button>
                  </Grid>
                </Grid>
              </Border>
            </StackPanel>
          </ScrollViewer>
        </DockPanel>
      </SplitView.Content>
    </SplitView>
    <!-- Input Converter Options Dialog Host -->
    <dialogHost:DialogHost IsOpen="True" 
                           CloseOnClickAway="True"
                           Background="{DynamicResource BackgroundBrush}">
      <dialogHost:DialogHost.DialogContent>
        <Border BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1">
          <StackPanel Orientation="Vertical" 
                      Spacing="10" 
                      Margin="20">
            <!-- Input Converter Options Dialog Host Main Content -->
            <ScrollViewer>
              <StackPanel Name="DialogHostInputConverterOptions"
                          Orientation="Vertical"
                          Spacing="10">
                
              </StackPanel>
            </ScrollViewer>
            <!-- Input Converter Options Dialog Host Buttons -->
            <Grid HorizontalAlignment="Stretch">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
              <!-- Cancel Button -->
              <Button Grid.Column="0" 
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      Margin="0 0 5 0">
                <StackPanel Orientation="Horizontal"
                            Spacing="10">
                  <PathIcon Data="{StaticResource CancelIcon}"
                            Height="20"
                            Width="20">
                  </PathIcon>
                  <TextBlock Text="Cancel"
                             FontFamily="{StaticResource JetBrainsMono}"
                             VerticalAlignment="Center">
                  </TextBlock>
                </StackPanel>
              </Button>
              <!-- Ok Button -->
              <Button Grid.Column="1" 
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      Margin="5 0 0 0"
                      Content="Ok">
                <StackPanel Orientation="Horizontal"
                            Spacing="10">
                  <PathIcon Data="{StaticResource OkIcon}"
                            Height="20"
                            Width="20">
                  </PathIcon>
                  <TextBlock Text="Ok"
                             FontFamily="{StaticResource JetBrainsMono}"
                             VerticalAlignment="Center">
                  </TextBlock>
                </StackPanel>
              </Button>
            </Grid>
          </StackPanel>
        </Border>
      </dialogHost:DialogHost.DialogContent>
    </dialogHost:DialogHost>
  </Grid>
</UserControl>
